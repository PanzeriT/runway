package template

templ Login() {
	<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
		<form action="/login" method="POST" class="space-y-4">
			<div>
				<label class="block text-sm font-medium">Username</label>
				<input name="username" class="mt-1 block w-full border rounded px-3 py-2"/>
			</div>
			<div>
				<label class="block text-sm font-medium">Password</label>
				<input name="password" type="password" class="mt-1 block w-full border rounded px-3 py-2"/>
			</div>
			<button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Login</button>
		</form>
	</div>
}
templ Logout() {
	<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
    You successfully logged out.
    <a href="/login" class="text-blue-600 hover:underline">Login again</a>
	</div>
}
